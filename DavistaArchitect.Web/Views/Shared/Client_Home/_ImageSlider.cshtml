<header class="header py-6 vh-850">
    <div class="container">
        <div class="row mb-5 text-center">
            <div class="col-12 text-container">
                <h1 class="display-2 text-white mt-3">
                    Good design evolves throughout the whole design process
                </h1>
                <p class="lead text-white w-75 m-auto mb-4">
                    We believe the best designs come from the collaboration of both client and designer
                </p>
                <a class="btn btn-primary text-uppercase" href="#contactus">
                    Contact Us
                </a>
                <a class="btn btn-outline-light text-uppercase ms-2" asp-area="Client" asp-controller="Home" asp-action="Projects">
                    Discover
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <!-- Image slider -->
                <div id="header_slider" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button class="active" type="button" data-bs-target="#header_slider" data-bs-slide-to="0" aria-current="true" aria-label="Slide1"></button>
                        <button type="button" data-bs-target="#header_slider" data-bs-slide-to="1" aria-label="Slide2"></button>
                        <button type="button" data-bs-target="#header_slider" data-bs-slide-to="2" aria-label="Slide3"></button>
                    </div>
                    <div class="carousel-inner rounded-5">
                        <div class="carousel-item active">
                            <img src="~/images/demo-slide-1.jpeg" alt="" class="d-block w-100 rounded-5" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/demo-slide-2.jpeg" alt="" class="d-block w-100 rounded-5" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/demo-slide-3.jpeg" alt="" class="d-block w-100 rounded-5" />
                        </div>
                    </div>

                    <!-- buttons -->
                    <button class="carousel-control-prev" type="button" data-bs-slide="prev" data-bs-target="#header_slider">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-slide="next" data-bs-target="#header_slider">
                        <span class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </button>

                </div>
            </div>
        </div>
    </div>
</header>