@model List<DavistaArchitect.Models.ViewModels.ManageUserRolesVM>

@{
    ViewData["Title"] = "Manage";
}

<header class="bg-dark" style="min-height: 100px;"></header>
<section class="container border-1 rounded-3 p-4 my-6 shadow">
    <div class="container my-4">
        <h2>User Role - @ViewData["Title"]</h2>
        <h3 ><i class="fa-solid fa-user fs-5 text-black"></i>: @ViewBag.UserName</h3>
    </div>
    <hr />
        <form method="post">
            <div >
                <div class="card-header">

                    
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input asp-for="@Model[i].Selected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].Selected">
                                @Model[i].RoleName
                            </label>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-controller="UserRoles" asp-action="Index" asp-route-id="@ViewBag.userId"
                       class="btn btn-danger" style="width:auto">Cancle</a>
                </div>
            </div>
        </form>
    </div>

</section>

