@model DavistaArchitect.Models.Category

@{
    ViewData["Title"] = "Categories - Create";
}

<header class="bg-dark" style="min-height: 100px;"></header>
<section class="container border-1 rounded-3 p-4  my-6 shadow">
    <div class="container my-4">
        <h2>@ViewData["Title"]</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Category Name">
                    <label asp-for="Name" for="floatingInput">Category Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="DisplayOrder" type="text" class="form-control" id="floatingInput" placeholder="DisplayOrder Number">
                    <label asp-for="DisplayOrder" for="floatingInput">DisplayOrder Number</label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a class="btn btn-danger" asp-action="Index">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>

</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
