@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="bg-dark" style="height:90px;">
    <h2>CMS</h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 h-auto justify-content-center">
            <section class="my-5">
                <div class="bg-dark text-bg-dark d-flex justify-content-center border-1 shadow-lg rounded-top-3">
                    <img src="https://dbijapkm3o6fj.cloudfront.net/resources/10445,4,1,9,4,0/-2377-/20160118123903/davista-architecture-ltd.jpeg"
                         class="img-fluid py-3" style="width:200px;" />
                </div>
                <form class="bg-white text-bg-light p-5 border border-light border-1 shadow-lg rounded-bottom-3" id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-2">
                        <input id="floatingInput" for="floatingInput" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                        <label id="floatingInput" for="floatingInput" asp-for="Input.Email" class="form-label text-black"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password" class="form-label text-black"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col-5">
                        <button id="login-submit" type="submit" class="btn btn-primary rounded-0 fw-medium p-2">Log in</button>
                    </div>
                 @* <div class="row mt-2">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                       <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                        </p>
                    <p>
                            <a asp-page="./Manage/SetPassword">Set Password</a>
                        </p>
                    </div> *@
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
