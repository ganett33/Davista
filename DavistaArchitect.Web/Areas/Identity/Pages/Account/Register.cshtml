@page
@model RegisterModel
@{
    ViewData["Title"] = "Register User";
}


<div class="bg-dark" style="height:100px;">
</div>

<div class="container mt-3">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md h-auto justify-content-md-center">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                  class="bg-white text-bg-light p-5 border border-light border-1 shadow-lg rounded-3">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mt-2">
                    <div class=" col-6">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected> --Select Role-- </option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="form-floating col-12">
                        <input asp-for="Input.Email" class="form-control" autocomplete="UserName" aria-required="true" placeholder="" />
                        <label asp-for="Input.Email" class="form-label text-black ms-2"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="form-floating col-6" id="Input_Description">
                        <input asp-for="Input.AboutMe" class="form-control" aria-required="true" placeholder="" />
                        <label asp-for="Input.AboutMe" class="form-label text-black ms-2"></label>
                        <span asp-validation-for="Input.AboutMe" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6" id="Input_Description">
                        <input asp-for="Input.JobTitle" class="form-control" aria-required="true" placeholder="" />
                        <label asp-for="Input.JobTitle" class="form-label text-black ms-2"></label>
                        <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="form-floating col-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                        <label asp-for="Input.Password" class="form-label text-black ms-2"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                        <label asp-for="Input.ConfirmPassword" class="form-label text-black ms-2"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button id="registerSubmit" type="submit" class=" btn rounded-0 btn-primary text-white mt-3">Register</button>
            </form>
        </div>
    </div>

</div>



